{
    "manifest_version": 3,
    "name": "Dịch Tiếng Nhật Sang Tiếng Việt",
    "version": "1.0",
    "description": "Dịch tiếng Nhật trên DOM sang tiếng Việt.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}